    <template title="addon_install_update_check"><![CDATA[<xen:require css="addon_install_update_check.css" />

<div class="section">
	<h3 class="subHeading">{xen:phrase update_check}: <a href="{xen:adminlink add-ons/edit, $addOn}" target="_blank">{$addOn.title}</a></h3>
	
	<div class="overlayScroll primaryContent">
		<xen:if is="{$updateData.update} AND !{$skipUpdate}">
