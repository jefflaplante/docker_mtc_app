    <template title="addon_install_auto"><![CDATA[<xen:require css="addon_install_auto.css" />
<xen:require css="filter_list.css" />
<xen:require js="js/xenforo/filter_list.js" />
<xen:require js="js/sortable/jquery.sortable.min.js" />

<xen:title>{xen:phrase install_upgrade}</xen:title>

<xen:form action="{xen:adminlink 'add-ons/step-upload'}" upload="true" class="addOnInstallUpgrade">
	
	<xen:if is="{$addons}">
		<div class="dimmed">
			<xen:if is="{$addonbatch.is_completed}">
				{xen:phrase following_add_ons_installed_successfully_using_x_method_by_y_on_z, 'deploymentMethod={$addonbatch.deploymentMethod}', 'name={$addonbatch.username}', 'date={xen:date $addonbatch.install_date}'}:
			<xen:else />
				{xen:phrase following_add_ons_waiting_to_be_installed_or_upgraded}<br />
				<br />
				{xen:phrase click_to_continue_with_the_installation}				
			</xen:if>
		</div>
		
		<div class="batchList">
			<div class="subHeading">
				<xen:include template="filter_list_controls" />
				{xen:phrase add_ons_to_install_or_upgrade}
			</div>
			
			<ol class="FilterList Scrollable {xen:if '!{$addonbatch.is_completed}', 'Sortable'}" data-sort-url="{xen:adminlink 'add-ons/install-order', '', 'addon_install_batch_id={$addonbatch.addon_install_batch_id}'}">
				<xen:foreach loop="$addons" value="$addon">
					<xen:listitem
						class="listItem"
						id="{$addon.addon_install_batch_entry_id}"
						data-item-id="{$addon.addon_install_batch_entry_id}"
						label="{$addon.original_filename}"
						snippet="{$addon.addon_id} {xen:if {$addon.version_string}, "({xen:phrase version}: {$addon.version_string})"} {xen:if {$addon.in_error}, "| {xen:phrase addon_error}"}"
						delete="{xen:if '!{$addonbatch.is_completed}',{xen:adminlink 'add-ons/delete-addon-upgrade-entry', '', 'addon_install_batch_entry_id={$addon.addon_install_batch_entry_id}'}}"
						deletehint="{xen:if '!{$addonbatch.is_completed}', {xen:phrase remove_pending_upgrade_or_install}}"
						linkclass="OverlayTrigger">
					</xen:listitem>
				</xen:foreach>
			</ol>
			<p class="sectionFooter">{xen:phrase showing_x_of_y_items, 'count=<span class="FilterListCount">{xen:count $addons}</span>', 'total={xen:count $addons}'}</p>
		</div>
	</xen:if>
	
	<xen:if is="!{$addonbatch.is_completed}">
		<xen:controlunit label="{xen:phrase addoninstaller_deployment_method}:">
			<xen:select name="deployment_method" value="{$addonbatch.deploy_method}">
				<xen:foreach loop="$deploymentMethods" key="$key" value="$method">
					<xen:option value="{$key}" selected="{$key}=={$addonbatch.deploy_method}">{$method}</xen:option>
				</xen:foreach>
			</xen:select>
			<p class="explain">{xen:phrase pick_deployment_method_from_list_above}</p>
		</xen:controlunit>
	</xen:if>
	
	<xen:if is="!{$addonbatch.is_completed}">
	
		<ul class="Tabs tabs" data-panes=".installPanes > li">
			<li><a href="{$requestPaths.requestUri}#file">{xen:phrase install_upgrade_from_zip_or_xml}</a></li>
			<li><a href="{$requestPaths.requestUri}#rm">{xen:phrase install_upgrade_from_resource_manager}</a></li>
		</ul>
		
		<ul class="installPanes">
			<li id="file">
				<xen:controlunit label="{xen:phrase install_from_uploaded_file}/s:">
					<input type="file" name="upload_file[]" value="" id="ctrl_upload_file" multiple="multiple" accept=".zip,.xml" class="textCtrl">
					<p class="explain">{xen:phrase browse_for_one_or_more_xml_or_zip_files_to_install_upgrade_from}</p>
				</xen:controlunit>
				
				<xen:textboxunit label="{xen:phrase install_from_file_on_server}:" name="server_file">
					<xen:explain>{xen:phrase type_path_of_single_xml_or_zip_file_to_install_upgrade_from}</xen:explain>
				</xen:textboxunit>
			</li>
			<li id="rm">
				<xen:textboxunit label="{xen:phrase install_from_file_on_resource_manager}:" name="resource_url" explain="{xen:phrase resource_url_must_be_this_format}" />
			
				<xen:include template="addon_install_rm_login" />
			</li>
		</ul>
		
		<dl class="ctrlUnit submitUnit">
			<dt></dt>
			<dd>
				<ul>
					<li>
						<xen:checkbox>
							<xen:option name="_xfConfirm" selected="0">{xen:phrase addon_start_install}</xen:option>
						</xen:checkbox>
						<ul>
							<li>
								<input type="submit" id="submitButton" value="{xen:phrase add_to_batch}..." data-install="Start Install & Upgrade" data-add="Add to Batch..." class="button primary" accesskey="s">
							</li>
						</ul>
					</li>
				</ul>
			<dd>
		</dl>
		
		<xen:if is="{$addon_install_batch_id}">
			<input type="hidden" name="addon_install_batch_id" value="{$addon_install_batch_id}" />
		</xen:if>
	</xen:if>
	
	<xen:if is="{$addonbatch.is_completed}">
		<a href="{xen:adminlink 'add-ons/install-upgrade'}" class="button">
			{xen:phrase start_new_install_upgrade_batch}
		</a>
	</xen:if>
	
</xen:form>

<script>
	var $checkbox = $('#ctrl__xfConfirm_1'),
	    $button = $('#submitButton');
	    
	$checkbox.bind('change', function()
	{
		if ($checkbox.is(":checked"))
		{
			$button.val($button.data('install'));
		}
		else
		{
			$button.val($button.data('add'));
		}
	});
</script>]]></template>
