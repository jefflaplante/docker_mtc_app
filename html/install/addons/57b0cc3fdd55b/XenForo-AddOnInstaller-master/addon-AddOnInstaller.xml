			href="{xen:if '{$addOn.update_url}', '{xen:adminlink 'add-ons/update-edit', $addOn}', '{xen:adminlink 'add-ons/update-add', $addOn}'}"
			linkclass="OverlayTrigger">
			<xen:html>
				<a href="{xen:if '{$addOn.update_url}', '{xen:adminlink 'add-ons/update-edit', $addOn}', '{xen:adminlink 'add-ons/update-add', $addOn}'}" class="secondaryContent OverlayTrigger">{xen:phrase settings}</a>
				<xen:if is="{$addOn.update_url} && {$addOn.last_checked} && {$addOn.latest_version} && {$addOn.latest_version} != {$addOn.version_string} && {$addOn.latest_version} != {$addOn.skip_version}">
